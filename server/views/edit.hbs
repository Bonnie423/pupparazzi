<div>
<form class="form" action="/edit/{{id}}" method="post">
  <img class="img-circle" src="{{image}}" alt="{{name}}">
  <label for="name" class="form-item">
    Name:
    <input type="text" name="name" id="name" value="{{name}}">
  </label>
  
  <label for="breed" class="form-item">
    Breed:
    <input type="text" name="breed" id="breed" value="{{breed}}">
  </label>
  
  <label for="owner" class="form-item">
    Owner:
    <input type="text" name="owner" id="owner" value="{{owner}}">
  </label>
  
  <input type="hidden" name="image" value="{{image}}">
  
  <input type="submit" value="Submit" class="button">
 
</form>
<form action="/delete/{{id}}" method="POST">
  <!-- Include a hidden input field to specify the HTTP method -->
  <input type="submit" name="_method" value="Delete Puppy" class="button">
  
</form>
</div>
